# .editorconfig
# ルートとして扱う
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# にだけ適用
[*.cs]

# インデントやスペース
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_block_contents = true

# 変数名はキャメルケース（private は _ 付き）
dotnet_naming_rule.public_protected_variables_should_be_lower_camel_case.severity = warning
dotnet_naming_rule.public_protected_variables_should_be_lower_camel_case.symbols = public_protected_fields
dotnet_naming_rule.public_protected_variables_should_be_lower_camel_case.style = public_protected_lower_camel_case_style

# 変数名は _ 付きのキャメルケース（private）
dotnet_naming_rule.private_variables_should_be_lower_camel_case_with_underscore.severity = warning
dotnet_naming_rule.private_variables_should_be_lower_camel_case_with_underscore.symbols = private_fields
dotnet_naming_rule.private_variables_should_be_lower_camel_case_with_underscore.style = private_lower_camel_case_style

# 対象：public と protected フィールド
dotnet_naming_symbols.public_protected_fields.applicable_kinds = field
dotnet_naming_symbols.public_protected_fields.applicable_accessibilities = public, protected

# 対象：private フィールド
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

# public/protected の場合：lowerCamelCase
dotnet_naming_style.public_protected_lower_camel_case_style.capitalization = camel_case
dotnet_naming_style.public_protected_lower_camel_case_style.required_prefix =

# private の場合：_付きのlowerCamelCase
dotnet_naming_style.private_lower_camel_case_style.capitalization = camel_case
dotnet_naming_style.private_lower_camel_case_style.required_prefix = _

# 命名規則: Interface は I から始める PascalCase
dotnet_naming_rule.interfaces_should_start_with_I.severity = warning
dotnet_naming_rule.interfaces_should_start_with_I.symbols = interfaces
dotnet_naming_rule.interfaces_should_start_with_I.style = interface_style

dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_symbols.interfaces.applicable_accessibilities = *
dotnet_naming_symbols.interfaces.required_modifiers =

dotnet_naming_style.interface_style.capitalization = pascal_case
dotnet_naming_style.interface_style.required_prefix = I

# using の順序（Systemを上に）
dotnet_sort_system_directives_first = true

# フォーマットのスタイル
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# メソッド名は PascalCase（例：DoSomething）
dotnet_naming_rule.methods_should_be_pascal_case.severity = warning
dotnet_naming_rule.methods_should_be_pascal_case.symbols  = method_symbols
dotnet_naming_rule.methods_should_be_pascal_case.style    = pascal_case_style

dotnet_naming_symbols.method_symbols.applicable_kinds = method
dotnet_naming_symbols.method_symbols.applicable_accessibilities = *
dotnet_naming_symbols.method_symbols.required_modifiers =

dotnet_naming_style.pascal_case_style.capitalization = pascal_case
